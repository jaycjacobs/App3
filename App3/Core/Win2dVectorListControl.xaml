<UserControl
    x:Class="Cirros.Core.Display.Win2dVectorListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Cirros.Core.Display"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid x:Name="_vectorSurface">
        <canvas:CanvasControl x:Name="_vectorCanvas" ClearColor="Transparent"/>
        <canvas:CanvasControl x:Name="_overlayCanvas" ClearColor="Transparent"/>
        <canvas:CanvasControl x:Name="_magnifierCanvas" ClearColor="Transparent" HorizontalAlignment="Left" VerticalAlignment="Top"
                              Height="100" Width="100"/>
    </Grid>
</UserControl>
