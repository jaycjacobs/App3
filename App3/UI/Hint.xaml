<UserControl
    x:Class="CirrosUI.Hint"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Cirros8"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Border x:Name="_border" BorderBrush="Black" Opacity=".7" BorderThickness="1" Background="WhiteSmoke" Margin="5" IsHitTestVisible="False">
        <Grid>
            <TextBlock x:Name="_text" Text="vertex" Margin="4,0" FontSize="{Binding UIFontSizeSmall}"/>
        </Grid>
    </Border>
</UserControl>
