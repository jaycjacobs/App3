<UserControl
    x:Class="CirrosUI.LayerTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Cirros8.Settings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"  
    d:DesignHeight="40"
    d:DesignWidth="210">

    <StackPanel x:Name="_layerTileContainer" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        
        <Grid Grid.Column="0" x:Name="_lineSampleBackground" Margin="-4,0,0,0" Background="WhiteSmoke" HorizontalAlignment="Stretch">
            <Line x:Name="_lineSample" Canvas.Left="0" Canvas.Top="0" Stroke="Black" StrokeThickness="10" Width="60" Height="10" X1="0" X2="80" Y1="5" Y2="5" />
        </Grid>
        <TextBlock x:Name="_layerName" Grid.Column="1" Text="Layer Name" Style="{StaticResource SettingsTextSmall}" FontSize="{Binding UIFontSizeNormal}"
                   VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="6,0" />
    </StackPanel>
    <!--<Grid x:Name="_layerTileContainer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>-->
        
    <!--</Grid>-->
</UserControl>
